<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relpayfrag_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/listback" >

        <TextView
            android:id="@+id/pay_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:text="Reservation List"
            android:textColor="#FFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/butreservfrag_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="BACK"
            android:textColor="#FFF"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/liner_head"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/relpayfrag_1"
        android:background="@color/AppColor"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_restname"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Restaurant"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textStyle="bold" />

        <View
            android:layout_width="1px"
            android:layout_height="45dp"
            android:background="@color/margincolor" />

        <TextView
            android:id="@+id/txt_reststart"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Start"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textStyle="bold" />

        <View
            android:layout_width="1px"
            android:layout_height="45dp"
            android:background="@color/margincolor" />

        <TextView
            android:id="@+id/txt_restend"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="End"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textStyle="bold" />

        <View
            android:layout_width="1px"
            android:layout_height="45dp"
            android:background="@color/margincolor" />

        <TextView
            android:id="@+id/txt_restparty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Party Size"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/myView"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/liner_head"
        android:background="@color/margincolor" />

    <ListView
        android:id="@+id/resverlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/myView"
        android:background="@color/listback"
        android:divider="#fff"
        android:dividerHeight="1px"
        android:overScrollMode="never"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>