<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/margincolor"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgcustompay_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1px"
        android:background="@color/background"
        android:contentDescription="@string/image"
        android:padding="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_card_disabled" />

    <TextView
        android:id="@+id/txtcustompay_title"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Business"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#949494" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtcustompay_number"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1px"
            android:background="@color/background"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="....1234"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#949494" />

        <ImageView
            android:id="@+id/imgcustompay_star"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="1px"
            android:layout_marginTop="1px"
            android:background="@color/background"
            android:contentDescription="@string/image"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_star_grey" />
    </LinearLayout>

</LinearLayout>