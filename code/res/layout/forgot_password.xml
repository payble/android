<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_black"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/back_black"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#60000000"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:background="@color/black_header" >

                    <TextView
                        android:id="@+id/txt_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:onClick="Cancel"
                        android:padding="20dp"
                        android:text="@string/cancel"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/whitepure" />

                    <TextView
                        android:id="@+id/head_1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Reset Password"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin" >

                    <LinearLayout
                        android:id="@+id/lin_log"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/papa_rect"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@drawable/rect_round_shape_up"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txt_email"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/whitepure"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/email"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edit_forgot_email"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.6"
                                android:background="@color/whitepure"
                                android:gravity="left|center_vertical"
                                android:hint=""
                                android:inputType="textEmailAddress"
                                android:paddingLeft="10dp"
                                android:textAppearance="?android:attr/textAppearanceMedium" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/rest_password"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/rect_round_shape_down"
                            android:clickable="true"
                            android:contentDescription="@string/image"
                            android:gravity="center"
                            android:onClick="Go"
                            android:padding="12dp"
                            android:text="Submit"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFF" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>