<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/margincolor"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtcustomfootlist_no"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/searchBack"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="1"
        android:textColor="#949494" />

    <netleon.sansar.kent.support.TextFonts_SubHead
        android:id="@+id/txtcustomfootlist_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="2px"
        android:layout_weight="0.8"
        android:background="@color/searchBack"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Mas Taco"
        android:textColor="#20262B"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/searchBack"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp" >

        <RatingBar
            android:id="@+id/ratingfootlist"
            style="@style/RatingBarSmallAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:isIndicator="true"
            android:stepSize="0.01" />

        <netleon.sansar.kent.support.TextFonts_SubHead
            android:id="@+id/txtcustomfootlist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="10 Minutes"
            android:textColor="#C4C4C4"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>